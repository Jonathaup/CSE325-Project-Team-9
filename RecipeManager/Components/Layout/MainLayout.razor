@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="d-flex flex-column min-vh-100">
        <div class="top-row px-4">
            <LoginDisplay />
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="link-secondary text-decoration-none">
                <small>Help</small>
            </a>
        </div>

        <article class="content px-4 flex-grow-1 py-4">
            @Body
        </article>

        <footer class="bg-light text-center py-3 mt-auto border-top">
            <div class="container">
                <p class="mb-0 text-muted small">
                    &copy; 2025 RecipeManager | <span class="fw-bold">v1.0.0</span> | Released: Dec 7, 2025
                </p>
            </div>
        </footer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>