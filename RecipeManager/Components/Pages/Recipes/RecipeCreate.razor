@page "/recipes/create"
@rendermode InteractiveServer
@using RecipeManager.Models
@using RecipeManager.Services
@using Microsoft.AspNetCore.Components.Forms
@inject RecipeService RecipeService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Recipe</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="recipe" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-card-heading"></i> Recipe Title
                            </label>
                            <InputText @bind-Value="recipe.Title" 
                                      placeholder="Enter recipe title" 
                                      class="form-control form-control-lg" />
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-list-ol"></i> Preparation Steps
                            </label>
                            <InputTextArea @bind-Value="recipe.Steps" 
                                          placeholder="Describe the preparation steps..." 
                                          class="form-control" 
                                          rows="6" />
                        </div>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="mb-0">
                                    <i class="bi bi-basket"></i> Ingredients
                                </h4>
                                <button type="button" 
                                        class="btn btn-success btn-sm" 
                                        @onclick="AddIngredient">
                                    <i class="bi bi-plus-circle"></i> Add Ingredient
                                </button>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 40%;">Name</th>
                                            <th style="width: 20%;">Quantity</th>
                                            <th style="width: 25%;">Unit</th>
                                            <th style="width: 15%;" class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < recipe.Ingredients.Count; i++)
                                        {
                                            var index = i;
                                            <tr @key="i" class="ingredient-row">
                                                <td>
                                                    <InputText @bind-Value="recipe.Ingredients[index].Name" 
                                                              placeholder="e.g., Flour" 
                                                              class="form-control" />
                                                </td>
                                                <td>
                                                    <InputNumber @bind-Value="recipe.Ingredients[index].Quantity" 
                                                                placeholder="0" 
                                                                class="form-control" 
                                                                TValue="double?" />
                                                </td>
                                                <td>
                                                    <InputText @bind-Value="recipe.Ingredients[index].Unit" 
                                                              placeholder="e.g., cups" 
                                                              class="form-control" />
                                                </td>
                                                <td class="text-center">
                                                    <button type="button" 
                                                            class="btn btn-danger btn-sm" 
                                                            @onclick="@(() => RemoveIngredient(index))">
                                                        <i class="bi bi-trash">Remove</i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end border-top pt-3">
                            <a href="/recipes" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Save Recipe
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 12px;
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
        padding: 1.5rem;
    }

    .form-label {
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.15);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(25, 135, 84, 0.05);
    }

    .ingredient-row {
        transition: background-color 0.2s ease;
    }

    .btn {
        border-radius: 6px;
        padding: 0.5rem 1rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
    }

    h3 i, h4 i, .form-label i {
        margin-right: 0.5rem;
    }

    .validation-summary {
        border-radius: 8px;
    }

    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

    .btn-success:hover {
        background-color: #157347;
        border-color: #146c43;
    }

    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.875rem;
        }

        .btn {
            font-size: 0.875rem;
        }

        .d-flex.gap-2 {
            flex-direction: column;
        }
    }
</style>

@code {
    private Recipe recipe = new Recipe
    {
        Title = string.Empty,
        Steps = string.Empty,
        Ingredients = new List<Ingredient>
        {
            new Ingredient { Name = string.Empty, Quantity = 0, Unit = string.Empty }
        }
    };

    private void AddIngredient()
    {
        recipe.Ingredients.Add(new Ingredient { Name = string.Empty, Quantity = 0, Unit = string.Empty });
        StateHasChanged();
    }

    private void RemoveIngredient(int index)
    {
        if (recipe.Ingredients.Count > 1)
        {
            recipe.Ingredients.RemoveAt(index);
        }
        else
        {
            recipe.Ingredients[0] = new Ingredient { Name = string.Empty, Quantity = 0, Unit = string.Empty };
        }
        StateHasChanged();
    }

    private async Task HandleValidSubmit()
    {
        await RecipeService.AddAsync(recipe);
        Navigation.NavigateTo("/recipes");
    }
}