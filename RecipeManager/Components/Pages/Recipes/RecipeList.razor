@page "/recipes"
@using RecipeManager.Services
@using RecipeManager.Models
@inject RecipeService RecipeService

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">My Recipes</h1>
        <a href="/recipes/create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Create New Recipe
        </a>
    </div>

    @if (recipes == null)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading recipes...</p>
        </div>
    }
    else if (recipes.Count == 0)
    {
        <div class="alert alert-info text-center my-5">
            <h4>No recipes yet!</h4>
            <p class="mb-0">Start by creating your first recipe.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var recipe in recipes)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Title</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-list-ul"></i> @recipe.Ingredients.Count ingredient@(recipe.Ingredients.Count != 1 ? "s" : "")
                            </p>
                            <div class="text-truncate text-muted small mb-3" style="max-height: 40px;">
                                @(recipe.Steps?.Length > 100 ? recipe.Steps.Substring(0, 100) + "..." : recipe.Steps)
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="/recipes/details/@recipe.Id" class="btn btn-outline-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .card-title {
        color: #2c3e50;
        font-weight: 600;
    }

    .display-4 {
        color: #2c3e50;
        font-weight: 700;
    }
</style>

@code {
    private List<Recipe>? recipes;

    protected override async Task OnInitializedAsync()
    {
        recipes = await RecipeService.GetAllAsync();
    }
}