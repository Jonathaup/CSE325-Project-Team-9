@page "/recipes/details/{id:int}"
@rendermode InteractiveServer
@using RecipeManager.Models
@using RecipeManager.Services
@inject RecipeService RecipeService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            @if (recipe == null)
            {
                <div class="text-center my-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-muted">Loading recipe...</p>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0"><i class="bi bi-book"></i> @recipe.Title</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h5 class="section-title">
                                <i class="bi bi-list-ol"></i> Preparation Steps
                            </h5>
                            <div class="steps-content">
                                <p style="white-space: pre-wrap;">@recipe.Steps</p>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="section-title">
                                <i class="bi bi-basket"></i> Ingredients
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 50%;">Name</th>
                                            <th style="width: 25%;">Quantity</th>
                                            <th style="width: 25%;">Unit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ingredient in recipe.Ingredients)
                                        {
                                            <tr>
                                                <td><strong>@ingredient.Name</strong></td>
                                                <td>@ingredient.Quantity</td>
                                                <td>@ingredient.Unit</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        @if (deleteMessage != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle-fill"></i> @deleteMessage
                            </div>
                        }

                        @if (!showDeleteConfirm)
                        {
                            <div class="d-flex gap-2 justify-content-end border-top pt-3">
                                <a href="/recipes" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                                <a href="/recipes/edit/@recipe.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <button type="button" class="btn btn-danger" @onclick="ShowDeleteConfirmation">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning border-warning mt-3">
                                <h5 class="alert-heading">
                                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                                </h5>
                                <p class="mb-3">Are you sure you want to delete this recipe? This action cannot be undone.</p>
                                <hr>
                                <div class="d-flex gap-2 justify-content-end">
                                    <button type="button" class="btn btn-outline-secondary" @onclick="CancelDelete">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </button>
                                    <button type="button" class="btn btn-danger" @onclick="DeleteRecipe">
                                        <i class="bi bi-trash-fill"></i> Yes, Delete
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 12px;
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
        padding: 1.5rem;
    }

    .section-title {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e9ecef;
    }

    .section-title i {
        margin-right: 0.5rem;
        color: #0d6efd;
    }

    .steps-content {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 8px;
        border-left: 4px solid #0d6efd;
    }

    .steps-content p {
        margin-bottom: 0;
        line-height: 1.8;
        color: #495057;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    .table tbody td {
        padding: 1rem;
    }

    .btn {
        border-radius: 6px;
        padding: 0.5rem 1rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn i {
        margin-right: 0.25rem;
    }

    .alert {
        border-radius: 8px;
        border-width: 2px;
    }

    .alert i {
        margin-right: 0.5rem;
    }

    .alert-heading i {
        font-size: 1.2rem;
    }

    @@media (max-width: 768px) {
        .d-flex.gap-2 {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }

        .table-responsive {
            font-size: 0.875rem;
        }
    }
</style>

@code {
    [Parameter]
    public int Id { get; set; }
    
    private Recipe? recipe;
    private string? deleteMessage;
    private bool showDeleteConfirm = false;

    protected override async Task OnInitializedAsync()
    {
        recipe = await RecipeService.GetByIdAsync(Id);
    }

    private void ShowDeleteConfirmation()
    {
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirm = false;
    }

    private async Task DeleteRecipe()
    {
        if (recipe != null)
        {
            try
            {
                string recipeName = recipe.Title ?? "Recipe";
                await RecipeService.DeleteAsync(recipe.Id);
                deleteMessage = $"'{recipeName}' has been deleted successfully!";
                StateHasChanged();
                
                // Esperar 2 segundos para mostrar el mensaje antes de redirigir
                await Task.Delay(2000);
                Navigation.NavigateTo("/recipes");
            }
            catch (Exception ex)
            {
                deleteMessage = $"Error deleting recipe: {ex.Message}";
                showDeleteConfirm = false;
                StateHasChanged();
            }
        }
    }
}